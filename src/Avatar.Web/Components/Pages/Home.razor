@page "/"

<PageTitle>Avatar Manager - Home</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-primary">Avatar Manager</h1>
            <p class="lead">Welcome to the Avatar Management System</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-person-circle"></i> Manage Avatars
                    </h5>
                    <p class="card-text">View, create, edit, and delete avatar profiles.</p>
                    <a href="/avatars" class="btn btn-primary">View Avatars</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-plus-square"></i> Create New Avatar
                    </h5>
                    <p class="card-text">Add a new avatar to the system.</p>
                    <a href="/avatars/create" class="btn btn-success">Create Avatar</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-info">
                <h6><i class="bi bi-info-circle"></i> Features</h6>
                <ul class="mb-0">
                    <li>Create and manage avatar profiles</li>
                    <li>Categorize avatars by type</li>
                <li>Search and filter functionality</li>
                    <li>Responsive design with Bootstrap</li>
                    <li>Modern UI with Telerik components</li>
                </ul>
            </div>
        </div>
    </div>
</div>
