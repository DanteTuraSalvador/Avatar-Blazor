@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<div class="page">
    <AuthorizeView>
        <Authorized>
            <div class="sidebar">
                <NavMenu />
            </div>
        </Authorized>
    </AuthorizeView>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <a href="account/manage" class="me-3">Hello, @context.User.Identity?.Name!</a>
                    <a href="account/logout" class="btn btn-outline-primary">Log out</a>
                </Authorized>
                <NotAuthorized>
                    <a href="account/register" class="me-3">Register</a>
                    <a href="account/login" class="btn btn-primary">Log in</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
